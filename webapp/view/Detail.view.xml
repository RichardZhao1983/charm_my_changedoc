<mvc:View
	controllerName="zwx.sm.charm.urgentchange.controller.Detail"
	height="100%"
	xmlns="sap.m"
	xmlns:semantic="sap.f.semantic"
	xmlns:layout="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" 
	xmlns:rt="sap.ui.richtexteditor">

	<semantic:SemanticPage
		id="detailPage"
		showFooter="true"
		busy="{detailView>/busy}"
		busyIndicatorDelay="{detailView>/delay}">
		<semantic:titleHeading>
			<Title
				text="{detailView>/title}"
				level="H2"/>
		</semantic:titleHeading>
		<semantic:headerContent>
			<ObjectAttribute title="{i18n>urgentChangeId}" text="{ObjectId}"/>
			<ObjectAttribute title="{i18n>description}" text="{Description}"/>
			<ObjectAttribute title="{i18n>status}" text="{Status}"/>
			<ObjectAttribute title="{i18n>changedAt}" text="{ChangedAt}"/>
		</semantic:headerContent>
		<semantic:content>
			<IconTabBar
				id="idIconTabBarSeparatorMixed"
				expanded="true"
				class="sapUiForceWidthAuto sapUiMediumMarginBeginEnd">
				<items>
					<IconTabFilter icon="sap-icon://activities" iconColor="Neutral" id="detailsFilter" text="{i18n>ICON_TAB_DETAILS}">
						<ScrollContainer height="100%" width="100%" horizontal="false" vertical="true">
							<core:ExtensionPoint name="extFormOnDetailsTab" >
								<form:SimpleForm id="detailForm" class="sapUiLargeMarginBegin sapUiLargeMarginBottom"
									editable="true"
									layout="ResponsiveGridLayout"
									labelSpanXL="3"
									labelSpanL="3"
									labelSpanM="3"
									labelSpanS="3"
									adjustLabelSpan="false"
									emptySpanXL="3"
									emptySpanL="3"
									emptySpanM="3"
									emptySpanS="3"
									columnsXL="2"
									columnsL="1"
									columnsM="1"
									singleContainerFullSize="false"
									ariaLabelledBy="Title1">
									<Label id="testerLabel" text="{i18n>tester}"/>
									<Input
										id="testerForm"
										type="Text"
										value="{Tester}" enabled="false" width="300px"/>
									<Label id="changeManagerLabel" text="{i18n>changeManager}"/>
									<Input
										id="changeManagerForm"
										type="Text"
										value="{ChangeManager}" enabled="false" width="300px"/>
									<Label id="basisLabel" text="{i18n>basis}"/>
									<Input
										id="basisForm"
										type="Text"
										value="{Basis}" enabled="false" width="300px"/>
									<Label id="developerLabel" text="{i18n>developer}"/>
									<Input
										id="developerForm"
										type="Text"
										value="{Developer}" enabled="false" width="300px"/>
								</form:SimpleForm>
							</core:ExtensionPoint >
						</ScrollContainer>
					</IconTabFilter>
					
					<IconTabFilter icon="sap-icon://calendar" iconColor="Neutral" id="dateFilter" text="{i18n>ICON_TAB_Dates}">
						<ScrollContainer height="100%" width="100%" horizontal="false" vertical="true">
							<List items="{path : '/TaskListItemSet'}" > 
								<ObjectListItem type="Navigation" title="{SysType}">
								</ObjectListItem>
							</List>
						</ScrollContainer>
					</IconTabFilter>
					
					<IconTabFilter icon="sap-icon://post" iconColor="Neutral" id="textFilter" text="{i18n>ICON_TAB_Texts}">
						<ScrollContainer height="100%" width="100%" horizontal="false" vertical="true">
							<List items="{path : '/TaskListItemSet'}" > 
								<ObjectListItem type="Navigation" title="{SysType}">
								</ObjectListItem>
							</List>
						</ScrollContainer>
					</IconTabFilter>
					
					<IconTabFilter
						icon="sap-icon://attachment"
						iconColor="Neutral"
						id="attachmentFilter"
						text="{i18n>ICON_TAB_ATTACHMENTS}">
						<ScrollContainer height="100%" width="100%" horizontal="false" vertical="true">
							<UploadCollection noDataText="{i18n>ATTACHMENT_NO_DATA_TEXT}" change="onChange" fileDeleted="onDeleteFile" fileRenamed="onFileRenamed"
								id="fileupload" multiple="false" uploadComplete="onUploadComplete" busyIndicatorDelay="0" items="{/AttachmentSet}">
								<items>
									<UploadCollectionItem documentId="{documentId}" mimeType="{mimeType}" fileName="{fileName}" enableDelete="{enableDelete}"
										enableEdit="false" visibleEdit="false" visibleDelete="false" url="{url}">
										<attributes>
											<ObjectAttribute title="{i18n>UPLOADED_BY}" text="{contributor}"/>
											<ObjectAttribute title="{i18n>UPLOADED_ON}" text="{path: 'uploadDate',formatter: '.util.dateTime'}"/>
											<ObjectAttribute title="{i18n>FILE_SIZE}" text="{path: 'fileSize',formatter: '.util.formatFileSizeAttribute'}"/>
										</attributes>
									</UploadCollectionItem>
								</items>
							</UploadCollection>
						</ScrollContainer>
					</IconTabFilter>
			
					<IconTabFilter id="scopeFilter" icon="sap-icon://endoscopy" iconColor="Positive" text="{i18n>ICON_TAB_SCOPE}">
						<ScrollContainer height="100%" width="100%" horizontal="false" vertical="true">
							<List items="{path : '/TaskListItemSet'}" > 
								<ObjectListItem type="Navigation" title="{SysType}">
								</ObjectListItem>
							</List>
						</ScrollContainer>
					</IconTabFilter>
			
				</items>
			</IconTabBar>
			
		</semantic:content>
		<!--Semantic ShareMenu Buttons-->
		<semantic:sendEmailAction>
			<semantic:SendEmailAction
				id="shareEmail"
				press=".onSendEmailPress"/>
		</semantic:sendEmailAction>

		<semantic:closeAction>
			<semantic:CloseAction
					id="closeColumn"
					press=".onCloseDetailPress"/>
		</semantic:closeAction>

		<semantic:fullScreenAction>
			<semantic:FullScreenAction
					id="enterFullScreen"
					visible="{= !${device>/system/phone} &amp;&amp; !${appView>/actionButtonsInfo/midColumn/fullScreen}}"
					press=".toggleFullScreen"/>
		</semantic:fullScreenAction>
		<semantic:exitFullScreenAction>
			<semantic:ExitFullScreenAction
					id="exitFullScreen"
					visible="{= !${device>/system/phone} &amp;&amp; ${appView>/actionButtonsInfo/midColumn/fullScreen}}"
					press=".toggleFullScreen"/>
		</semantic:exitFullScreenAction>
		
		<semantic:footerCustomActions>
			<Button
				text="{i18n>ACTION_BUTTON}"
				class="sapUiSmallMargin"
				press=".onButtonPress">
				<dependents>
					<core:Fragment
						fragmentName="zwx.sm.charm.urgentchange.view.ActionSheet"
						type="XML" />
				</dependents>
			</Button>
		</semantic:footerCustomActions>

	</semantic:SemanticPage>

</mvc:View>